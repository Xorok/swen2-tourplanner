<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="hibernate">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>at.tiefenbrunner.swen2semesterprojekt.repository.entities.TourType</class>
        <class>at.tiefenbrunner.swen2semesterprojekt.repository.entities.TourDifficulty</class>
        <class>at.tiefenbrunner.swen2semesterprojekt.repository.entities.Tour</class>
        <class>at.tiefenbrunner.swen2semesterprojekt.repository.entities.TourLog</class>

        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/tourplanner"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="fh#123"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
